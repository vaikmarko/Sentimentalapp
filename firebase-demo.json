{
  "hosting": {
    "site": "sentimentalapp-demo",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "venv/**",
      "*.py",
      "requirements.txt"
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "sentimentalapp-demo",
          "region": "europe-west1"
        }
      }
    ]
  },
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  }
} 